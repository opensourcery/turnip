; Project-specific installation profile

base = opensourcery_install

name = PROJECTNAME
distribution_name = PROJECTNAME
description = DESCRIPTION
core = 7.x

; Core
dependencies[] = block
dependencies[] = contextual
dependencies[] = dashboard
dependencies[] = entitycache
dependencies[] = help
dependencies[] = image
dependencies[] = list
dependencies[] = menu
dependencies[] = number
dependencies[] = options
dependencies[] = path
dependencies[] = taxonomy
dependencies[] = dblog
dependencies[] = search
dependencies[] = shortcut
; The admin_menu module should only be used for development purposes.
dependencies[] = toolbar
dependencies[] = overlay
dependencies[] = field_ui
dependencies[] = file
dependencies[] = rdf

; Contrib
dependencies[] = ctools
dependencies[] = features
dependencies[] = pathauto
dependencies[] = redirect
dependencies[] = token
dependencies[] = strongarm
dependencies[] = wysiwyg

; Features
dependencies[] = os_base

;
; Users
;
users[root][uid] = 1
users[root][name] = superuser
users[root][mail] = superuser@os_project.dev
users[root][roles] = administrator
users[root][status] = 1

users[admin][uid] = 2
users[admin][name] = admin
users[admin][mail] = admin@os_project.dev
users[admin][roles] = site editor
users[admin][status] = 1

;
; Variables
;
variables[site_frontpage] = node/1
;variables[site_404] =
variables[site_mail] = admin@os_project.dev
variables[site_name] = PROJECTNAME
variables[admin_theme] = rubik
variables[node_admin_theme] = 1
variables[site_default_country] = US

; Disable core image styles
variables[os_base_remove_core_image_styles] = 1

; If needed, override opensourcery_install's default user_register setting
; (which is 0). Possible values:
; 0: Only administrators can create user accounts.
; 1: Visitors can create their own accounts.
; 2: Visitors can create accounts, but they don't become active without
;    administrative approval.
;variables[user_register] = 1

;
; Nodes
;
;; About page.
;nodes[about][type] = page
;nodes[about][title] = About
;nodes[about][body][und][0][value] = PLACEHOLDER
;nodes[about][body][und][0][format] = full_html
;nodes[about][uid] = 2
;nodes[about][language] = und
;nodes[about][menu][enabled] = 1
;nodes[about][menu][link_title] = About
;nodes[about][menu][menu_name] = main-menu
;nodes[about][menu][weight] = 0
;nodes[about][path][alias] = about
